<%- include('partials/header'); -%>
<div class="container">
<header>
    <h1 id="compose-h1">Write Your Note</h1>
  </header>
  <form method="post" action="/createNote" id="form-content">
    <div class="row my-4">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-floating">
          <textarea name="title" class="form-control" placeholder="Write here the title" id="floatingTextarea1"
            style="height: 100px"></textarea>
          <label for="floatingTextarea1">Title</label>
        </div>
      </div>
    </div>
    <div class="row my-2">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-floating">
          <textarea name="content" class="form-control" placeholder="Write here the content" id="floatingTextarea2"
            style="height: 130px"></textarea>
          <label for="floatingTextarea2">Content</label>
        </div>
      </div>
    </div>
    <button class="btn btn-danger my-2" type="submit" id="publish_btn">Confirm</button>
  </form>
</div>
<%- include('partials/footer'); -%>
