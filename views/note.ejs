<%- include('partials/header'); -%>
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><%= title %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= content %></p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Written by <%= username %></small>
                </div>
                <div class="card-footer d-flex justify-content-end g-5">
                    <a href="/<%= encodeURIComponent(title) %>/tasks" class="btn btn-primary mx-2">Go to Todo List 
                    <i class="bi bi-list-task"></i>
                    </a>
                    <button id="deleteNote" class="btn btn-warning mx-2">Delete Note <i class="bi bi-trash fs-4"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer'); -%>
